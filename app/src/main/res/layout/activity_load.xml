<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/loadContainer"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.aeg.xmlscore.Load">

    <TextView android:text="Select the stave to load" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/loadableList"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:smoothScrollbar="true"
        android:clickable="false"
        android:choiceMode="singleChoice" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="355dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/filename" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="Delete"
        android:id="@+id/delbutton"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="30dp"
        android:onClick="delete"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="Load"
        android:id="@+id/loadbutton"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="200dp"
        android:onClick="load"/>

</RelativeLayout>
